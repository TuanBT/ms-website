@{
    List<MS_Website.Models.RecruitmentTemp> Recruitments = Model;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.StaffManage = true;
}
<link rel="stylesheet" type="text/css" href="../Content/TableJquery/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="../Content/TableJquery/js/jquery.dataTables.min.js"></script>
<div class="Menu">
    @Html.Partial("_PartialMenu")
    <div class="hChildMenu">
        <ul class="hChildMenuList">
            <li class="">
                <a href="@Url.Action("ManageJobRequest","MaidManager")" class="hChContent">Yêu cầu tìm việc</a>
            </li>
            <li class="iscurent">
                <a href="@Url.Action("ManageRecruitment","MaidManager")" class="hChContent">Yêu cầu tìm người giúp việc</a>
            </li>
            <li class="">
                <a href="@Url.Action("ManageAppliedJobRequest","MaidManager")" class="hChContent">Xác nhận yêu cầu tìm việc</a>
            </li>
        </ul>
    </div>
</div>
<div class="body">
    <div class="rows">
        <div class="row">
            <div class="col-md-12">
                <script type="text/javascript" language="javascript" class="init">
                    $(document).ready(function () {
                        $('#JRTable').DataTable();
                    });
                </script>
                <table id="JRTable" class="display" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã</th>
                    <th>Tiêu đề yêu cầu</th>
                    <th>Người tuyển việc</th>
                    <th>Thời gian đăng</th>
                    <th>Xử lý</th>
                </tr>
                </thead>

                    <tbody>
                        @{var count=0;}
                        @foreach (var Recruitment in Recruitments)
                        {
                            
                            count++;
                            <tr>
                                <td>
                                    @count
                                    <input type="hidden" value="@(Recruitment.Recruitment.RecruitmentId)" id="" />
                                </td>
                                <td>@Recruitment.Recruitment.RecruitmentId</td>
                                <td>
                                    <a href="@Url.Action("GetRecruitment", "Post", new { recruitmentId = Recruitment.Recruitment.RecruitmentId })">@Recruitment.Recruitment.Title</a>
                                </td>
                                
                                <td>
                                    <a href="@Url.Action("GetCustomer", "Customer", new { custId = Recruitment.Recruitment.CustomerId })">@Recruitment.Account.FullName</a>
                                </td>
                                <td>@Recruitment.Recruitment.PostTime.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <button type="button" class="btn btn-success" data-toggle="modal" data-target=".bs-example-modal-lg" onclick="btnActive(@Recruitment.Recruitment.RecruitmentId)">Kích hoạt</button>
                                </td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
                <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                                <h4 class="modal-title" id="myLargeModalLabel">Xác nhận kích hoạt</h4>
                            </div>
                            <div class="modal-body">
                               Bạn thực sự đã nhận tiền từ khách hàng này?
                            </div>
                            <div class="modal-footer">
                                @using (Html.BeginForm("MarkActiveRecruitment","MaidManager",FormMethod.Get))
                                {
                                    <input type="hidden" name="recruitmentId" id="jrId2" />
                                    <button type="submit" class="btn btn-success" id="btnAccept">Chấp nhận</button>
                                }
                                
                            </div>
                        </div><!-- /.modal-content -->
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" language="javascript">
            /*  $("#btnActive").click(function (jobRequestId)
              {
                 document.getElementById('jrId2').setAttribute("value",jobRequestId);
              })*/

            function btnActive(recruitmentId) {
                document.getElementById('jrId2').setAttribute("value", recruitmentId);
            }
        </script>

    </div>
</div>
