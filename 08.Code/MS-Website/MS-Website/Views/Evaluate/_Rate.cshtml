@model MS_Website.Models.Rating

<link href="~/Content/bootstrap-star-rating-master/css/star-rating.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap-star-rating-master/js/star-rating.js"></script>

@using (Html.BeginForm())
{
    <input id="input-3" class="rating" data-size="sm" value="@ViewBag.AverageRate" />
    <input name="Rate" id="Rate" value="" type="hidden" />
    <input name="JobRequestId" value="1" type="hidden" />
    <input name="CustomerId" value="11" type="hidden" />
    
    <button type="submit" class="btn btn-primary">Chấm điểm</button>
}

<script type="text/javascript">
    replaceStr();
    function replaceStr() {
        var str = $("#input-3").val();
        var rep = str.replace(",", ".");
        $("#input-3").val(rep);
    };
    $("#input-3").change(function () {
        replaceStr();
    })
</script>
