
@if (Session["AccId"] != null)
{
    <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" style="display: inline-block">
        <input type="hidden" name="cmd" value="_xclick">
        <input type="hidden" name="business" value="ms_website@gmail.com">
        <input type="hidden" name="item_name" value="Recruitment">
        <input id="recruitId" type="hidden" name="item_number">
        <input id="amount" type="hidden" name="amount">
        <input type="hidden" name="no_shipping" value="0">
        <input type="hidden" name="no_note" value="1">
