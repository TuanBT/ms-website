@{
    ViewBag.Title = "Sửa thông tin người tuyển việc";
    MS_Website.Models.Account account = Model;
    ViewBag.Info = true;
}
<link href="../Content/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet">
<script src="../Content/bootstrap-fileinput/js/fileinput.min.js" type="text/javascript"></script>
<div class="Menu">
    @Html.Partial("_PartialMenu")
    <div class="hChildMenu">
        <ul class="hChildMenuList">
            <li>
                <a href="@Url.Action("GetCustomer", "Customer", new { custId = account.AccountId})" class="hChContent">Cá nhân</a>
            </li>
            <li class="iscurent">
                <a class="hChContent">Sửa thông tin</a>
            </li>
        </ul>
    </div>
</div>
<div class="body">
    <div class="rows">
        <div class="row">
            <div class="titlePage">Sửa thông tin khách hàng</div>
            @using (Html.BeginForm("EditCustProfile", "Customer", new { custId = account.AccountId }))
            {
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Họ và tên
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@account.FullName" name="fullname">
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Số điện thoại
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@account.Phone" name="phone">
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Email
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@account.Email" name="email">
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Địa chỉ
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@ViewBag.CustAddr" name="addr">
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Ảnh đại diện
                    <img src="@account.Avatar" width="80%">
                        </div>
                        <div class="col-md-8">
                            <input id="input-21" type="file" accept="image/*">
                            <script>
                                $("#input-21").fileinput({
                                    previewFileType: "image",
                                    browseClass: "btn btn-success",
                                    browseLabel: " Chọn hình",
                                    browseIcon: '<i class="glyphicon glyphicon-picture"></i>',
                                    removeClass: "btn btn-danger",
                                    removeLabel: " Xóa",
                                    removeIcon: '<i class="glyphicon glyphicon-trash"></i>',
                                    uploadClass: "btn btn-info",
                                    uploadLabel: " Tải lên",
                                    uploadIcon: '<i class="glyphicon glyphicon-upload"></i>'
                                });
                            </script>
                        </div>
                    </div>
                </div>
                <div class="buttonFooterPage">
                    <button class="btn btn-success btn-lg">Cập nhập thông tin</button>
                </div>
            }
        </div>
    </div>
</div>

