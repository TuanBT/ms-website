@{
    ViewBag.Title = "Thông tin người giúp việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    MS_Website.Models.Maid maid = Model;
}



<div class="Menu">
    <div class="rows">
        <div class="hMenu">
            <div class="hFatherMenu">
                <ul class="hmeTabList">
                    <li>
                        <a class="hefaContent iscurent">Thông tin</a>
                    </li>
                    <li>
                        <a href="#" class="hefaContent">Quản lý</a>
                    </li>
                    <li>
                        <a href="#" class="hefaContent">Yêu cầu công việc</a>
                    </li>
                    <li>
                        <a href="#" class="hefaContent">Thông báo</a>
                    </li>
                    <li>
                        <a href="#" class="hefaContent">Thống kê</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="hChildMenu">
        <ul class="hChildMenuList">
            <li class="iscurent">
