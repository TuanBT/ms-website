@{
    ViewBag.Title = "Thêm người giúp việc";
    ViewBag.AddMaid = true;
}

<link href="../Content/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet">
<script src="../Content/bootstrap-fileinput/js/fileinput.min.js" type="text/javascript"></script>
<script src="../Content/bootstrap-datetimepicker/js/moment.js" type="text/javascript"></script>
<link href="../Content/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
<script src="../Content/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.js"></script>

<div class="Menu">
    @Html.Partial("_PartialMenu")
</div>
<div class="body">
    <div class="rows">
        <div class="row">
            <div class="titlePage">THÊM NGƯỜI GIÚP VIỆC</div>
            @using (Html.BeginForm("AddMaid", "MaidManager"))
            {
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Họ và tên
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="fullname" id="txtMaidName" maxlength="50" placeholder="Tối đa 50 kí tự">
                            <div id="AddErr"></div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Kinh nghiệm (năm)
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="exp">
                                <option value="0">< 1 năm</option>
                                <option value="2">1 - 3 năm</option>
                                <option value="4">> 3 năm</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Số điện thoại
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="phone" id="txtPhone" maxlength="15">
                            <div id="PhoneErr"></div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Ngày sinh
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <div class="input-group datepicker">
                                    <input type="text"  class="form-control datepicker" name="birthdate" data-date-format="DD/MM/YYYY" readonly="readonly" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <script>
                                $(function () {
                                    $(".datepicker").datetimepicker();
                                });
                            </script>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Giới tính
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="gender">
                                <option value="true">Nam</option>
                                <option value="false">Nữ</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Biết tiếng
                        </div>
                        <div class="col-md-8">
                            <div class="checkbox">
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="english" name="english">
                                    Tiếng Anh
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="korean" name="korean">
                                    Tiếng Hàn
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="jap" name="jap">
                                    Tiếng Nhật
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="chinese" name="chinese">
                                    Tiếng Trung
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Nguyên quán
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="hometown">
                                @foreach (var item in ViewBag.Hometown)
                                {
                                    <option value="@item.SkillString">@item.SkillString</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Đang sống tại
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="addr">
                                @foreach (var item in ViewBag.Address)
                                {
                                    <option value="@item.SkillString">@item.SkillString</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Kết hôn
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="married">
                                <option value="true">Đã kết hôn</option>
                                <option value="false">Chưa kết hôn</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Giới thiệu bản thân
                        </div>
                        <div class="col-md-8">
                            <textarea class="form-control" rows="3" name="desc" maxlength="100"></textarea>
                        </div>
                    </div>
                </div>
                <div class="footerButton">
                    <button class="btn btn-success btn-lg" id="btnAddMaid">Hoàn tất thêm người giúp việc</button>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
    $("#btnAddMaid").click(function () {
        var errText = "";
        var phone = new RegExp('^[0-9]+$');
        var reg = new RegExp('^(?=.)([+-]?([0-9]*)(\.([0-9]+))?)$');
        if ($("#txtMaidName").val().trim() == "") {
            errText = "<font color='red'>Vui lòng nhập tên người giúp việc</font>";
            document.getElementById("AddErr").innerHTML = errText;
            return false;
        } else {
            errText = "";
            document.getElementById("AddErr").innerHTML = errText;
        }
        if (reg.test($("#txtExp").val())==false) {
            errText = "<font color='red'>Vui lòng nhập số</font>";
            document.getElementById("ExpErr").innerHTML = errText;
            return false;
        } else {
            errText = "";
            document.getElementById("ExpErr").innerHTML = errText;
        }
        if (phone.test($("#txtPhone").val()) == false) {
            errText = "<font color='red'>Vui lòng nhập số</font>";
            document.getElementById("PhoneErr").innerHTML = errText;
            return false;
        } else {
            errText = "";
            document.getElementById("PhoneErr").innerHTML = errText;
        }
    });
    </script>


