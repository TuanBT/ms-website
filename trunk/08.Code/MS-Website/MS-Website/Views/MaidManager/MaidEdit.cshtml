@{
    ViewBag.Title = "Sửa thông tin người giúp việc";
    MS_Website.Models.Maid maid = Model;
    ViewBag.Info = true;
}

<link href="../Content/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet">
<script src="../Content/bootstrap-fileinput/js/fileinput.min.js" type="text/javascript"></script>
<script src="../Content/bootstrap-datetimepicker/js/moment.js" type="text/javascript"></script>
<link href="../Content/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
<script src="../Content/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>

<div class="Menu">
    @Html.Partial("_PartialMenu")
    <div class="hChildMenu">
        <ul class="hChildMenuList">
            <li>
                <a href="@Url.Action("ManageMaidProfile", "MaidManager", new { maidId = maid.MaidId })" class="hChContent">Cá nhân</a>
            </li>
            <li class="iscurent">
                <a class="hChContent iscurent">Sửa thông tin</a>
            </li>
        </ul>
    </div>
</div>
<div class="body">
    <div class="rows">
        <div class="row">
            <div class="titlePage">Sửa thông tin người giúp việc</div>
            @using (Html.BeginForm("EditMaidProfile", "MaidManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="hidden" value="@maid.MaidId" name="maidId"/>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Họ và tên
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@maid.MaidName" name="fullname" id="txtMaidName" maxlength="50">
                            <div id="AddErr"></div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Kinh nghiệm (năm)
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@maid.Experience" name="exp" id="txtExp" maxlength="5">
                            <div id="ExpErr"></div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Số điện thoại
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@maid.Phone" name="phone" id="txtPhone" maxlength="15">
                            <div id="PhoneErr"></div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Ngày sinh
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <div class="input-group datepicker">
                                    <input type="text"  class="form-control datepicker" name="birthdate" data-date-format="DD/MM/YYYY" value="@maid.BirthDate.Value.ToShortDateString()"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <script>
                                $(function () {
                                    $(".datepicker").datetimepicker();
                                });
                            </script>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Giới tính
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="gender">
                                <option selected="@(maid.Gender == null ? "selected" : "")">--</option>
                                <option value="true" selected="@(maid.Gender != null && (bool)maid.Gender ? "selected" : "")">Nam</option>
                                <option value="false" selected="@(maid.Gender != null && !(bool)maid.Gender ? "selected" : "")">Nữ</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Biết tiếng
                        </div>
                        <div class="col-md-8">
                            <div class="checkbox">
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="english" @(maid.English != null && (bool)maid.English ? "checked" : "")>
                                    Tiếng Anh
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="korean" @(maid.Korean != null && (bool)maid.Korean ? "checked" : "")>
                                    Tiếng Hàn
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="jap" @(maid.Japanese != null && (bool)maid.Japanese ? "checked" : "")>
                                    Tiếng Nhật
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="chinese" @(maid.Chinese != null && (bool)maid.Chinese ? "checked" : "")>
                                    Tiếng Trung
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Nguyên quán
                        </div>
                        <div class="col-md-8">
                            <select class="form-control">
                                <option selected="@(maid.Hometown == null ? "selected" : "")">--</option>
                                @foreach (var item in ViewBag.Hometown)
                                {
                                    <option value="@item.SkillString" @(maid.Hometown != null && maid.Hometown.Equals(item.SkillString) ? "selected" : "")>@item.SkillString</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Đang sống tại
                        </div>
                        <div class="col-md-8">
                            <select class="form-control">
                                <option selected="@(maid.Address == null ? "selected" : "")">--</option>
                                @foreach (var item in ViewBag.Address)
                                {
                                    <option value="@item.SkillString" @(maid.Address != null && maid.Address.Equals(item.SkillString) ? "selected" : "")>@item.SkillString</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Kết hôn
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="married">
                                <option selected="@(maid.Married == null ? "selected" : "")">--</option>
                                <option value="true" selected="@(maid.Married != null && (bool)maid.Married ? "selected" : "")">Đã kết hôn</option>
                                <option value="false" selected="@(maid.Married != null && !(bool)maid.Married ? "selected" : "")">Chưa kết hôn</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Giới thiệu bản thân
                        </div>
                        <div class="col-md-8">
                            <textarea class="form-control" rows="3" name="desc" value="@maid.Description" maxlength="100"></textarea>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Ảnh người giúp việc
                            <img src="@maid.PersonalImage" width="80%">
                        </div>
                        <div class="col-md-8">
                            <input id="input-21" type="file" accept="image/*" name="avatar"/>
                            <script>
                                $("#input-21").fileinput({
                                    previewFileType: "image",
                                    browseClass: "btn btn-success",
                                    browseLabel: " Chọn hình",
                                    browseIcon: '<i class="glyphicon glyphicon-picture"></i>',
                                    removeClass: "btn btn-danger",
                                    removeLabel: " Xóa",
                                    removeIcon: '<i class="glyphicon glyphicon-trash"></i>',
                                    uploadClass: "btn btn-info",
                                    uploadLabel: " Tải lên",
                                    uploadIcon: '<i class="glyphicon glyphicon-upload"></i>'
                                });
                            </script>
                        </div>
                    </div>
                </div>
                <div class="buttonFooterPage">
                    <button class="btn btn-success btn-lg" id="btnEdit">Cập nhập thông tin</button>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
    $("#btnEdit").click(function () {
        console.debug("sdf");
        var errText = "";
        var phone = new RegExp('^[0-9]+$');
        var reg = new RegExp('[0-9]*[.][0-9]+$');
        if ($("#txtMaidName").val() == "") {
            errText = "<font color='red'>Vui lòng nhập tên người giúp việc</font>";
            document.getElementById("AddErr").innerHTML = errText;
            return false;
        } else {
            errText = "";
            document.getElementById("AddErr").innerHTML = errText;
        }
        if (reg.test($("#txtExp").val()) == false) {
            errText = "<font color='red'>Vui lòng nhập số thập phân không bao gồm chữ</font>";
            document.getElementById("ExpErr").innerHTML = errText;
            return false;
        } else {
            errText = "";
            document.getElementById("ExpErr").innerHTML = errText;
        }
        if (phone.test($("#txtPhone").val()) == false) {
            errText = "<font color='red'>Vui lòng nhập số</font>";
            document.getElementById("PhoneErr").innerHTML = errText;
            return false;
        } else {
            errText = "";
            document.getElementById("PhoneErr").innerHTML = errText;
        }
    });
    </script>
