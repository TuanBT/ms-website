@{
    ViewBag.Title = "Sửa thông tin người giúp việc";
    MS_Website.Models.Maid maid = Model;
}

<link href="../Content/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet">
<script src="../Content/bootstrap-fileinput/js/fileinput.min.js" type="text/javascript"></script>
<script type="text/javascript" src="../Content/AdminLTE-master/js/jquery-ui.min.js"></script>
<div class="Menu">
    <div class="rows">
        <div class="hMenu">
            <div class="hFatherMenu">
                <ul class="hmeTabList">
                    <li>
                        <a href="@Url.Action("GetMaidManager", "MaidManager", new { accId = Session["AccId"], role = Session["Role"] })" class="hefaContent iscurent">Thông tin</a>
                    </li>
                    <li>
                        <a href="#" class="hefaContent">Thống kê</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
    <div class="hChildMenu">
        <ul class="hChildMenuList">
            <li>
                <a href="@Url.Action("ManageMaidProfile", "MaidManager", new { maidId = Model.MaidId })" class="hChContent">Cá nhân</a>
            </li>
            <li class="iscurent">
                <a class="hChContent iscurent">Sửa thông tin</a>
            </li>
        </ul>
    </div>
</div>
<div class="body">
    <div class="rows">
        <div class="row">
            <div class="titlePage">Sửa thông tin người giúp việc</div>
            @using (Html.BeginForm("EditMaidProfile", "MaidManager", new { maidId = maid.MaidId}))
            {
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Họ và tên
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@maid.MaidName" name="fullname">
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Kinh nghiệm (năm)
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@maid.Experience" name="exp">
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Số điện thoại
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@maid.Phone" name="phone">
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Ngày sinh
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" id="datepicker" class="form-control" name="birthdate" value="@maid.BirthDate"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <script>
                                $(function() {
                                    $("#datepicker").datepicker();
                                });
                            </script>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Giới tính
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="gender">
                                <option value="true" selected="@((bool)maid.Gender ? "selected":"")">Nam</option>
                                <option value="false" selected="@(!(bool)maid.Gender ? "selected":"")">Nữ</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Biết tiếng
                        </div>
                        <div class="col-md-8">
                            <div class="checkbox">
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="english" @((bool)maid.English ? "checked" : "")>
                                    Tiếng Anh
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="korean" @((bool)maid.Korean ? "checked" : "")>
                                    Tiếng Hàn
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="jap" @((bool)maid.Japanese ? "checked" : "")>
                                    Tiếng Nhật
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="chinese" @((bool)maid.Chinese ? "checked" : "")>
                                    Tiếng Trung
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Nguyên quán
                        </div>
                        <div class="col-md-8">
                            <select class="form-control">
                                @foreach (var item in ViewBag.Hometown)
                                {
                                    <option value="@item.SkillString" @(maid.Hometown.Equals(item.SkillString) ? "selected":"")>@item.SkillString</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Đang sống tại
                        </div>
                        <div class="col-md-8">
                            <select class="form-control">
                                @foreach (var item in ViewBag.Address)
                                {
                                    <option value="@item.SkillString" @(maid.Address.Equals(item.SkillString) ? "selected":"")>@item.SkillString</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Kết hôn
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="married">
                                <option value="true" selected="@((bool)maid.Married ? "selected":"")">Đã kết hôn</option>
                                <option value="false" selected="@(!(bool)maid.Married ? "selected":"")">Chưa kết hôn</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Giới thiệu bản thân
                        </div>
                        <div class="col-md-8">
                            <textarea class="form-control" rows="3" name="desc" value="@maid.Description"></textarea>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Ảnh người giúp việc
                            <img src="@maid.PersonalImage" width="80%">
                        </div>
                        <div class="col-md-8">
                            <input id="input-21" type="file" accept="image/*">
                            <script>
                                $("#input-21").fileinput({
                                    previewFileType: "image",
                                    browseClass: "btn btn-success",
                                    browseLabel: " Chọn hình",
                                    browseIcon: '<i class="glyphicon glyphicon-picture"></i>',
                                    removeClass: "btn btn-danger",
                                    removeLabel: " Xóa",
                                    removeIcon: '<i class="glyphicon glyphicon-trash"></i>',
                                    uploadClass: "btn btn-info",
                                    uploadLabel: " Tải lên",
                                    uploadIcon: '<i class="glyphicon glyphicon-upload"></i>'
                                });
                            </script>
                        </div>
                    </div>
                </div>
                <div class="buttonFooterPage">
                    <button class="btn btn-success btn-lg">Cập nhập thông tin</button>
                </div>
            }
        </div>
    </div>
</div>
