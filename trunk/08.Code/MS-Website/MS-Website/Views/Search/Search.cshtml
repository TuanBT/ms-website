@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Style/Home.css" rel="stylesheet">



<div class="header">
    <div class="rows">
        <div class="logo">
            <a href="#">
                <img src="../Content/Image/MS-Logo-white.png" alt="Maid service"
                    style="margin-top: -18px; margin-bottom: -14px; width: 80px;"></a>
        </div>
        <div class="search">

            <div class="inputGroup">
                <span class="dropdown active">
                    <span class="glyphicon glyphicon-chevron-down"
                        style="z-index: 100; color: white; float: right; margin-top: 14px; margin-right: 6px;"></span>
                    <input id="search-freelancers" type="radio" name="for" value="freelancers"
                        data-action="/o/profiles/browse/" data-placeholder="Search freelancers"
                        checked="checked">
                    <label for="search-freelancers">Người giúp việc</label>
                    <input id="search-jobs" type="radio" name="for" value="jobs" data-action="/o/jobs/browse/"
                        data-placeholder="Search jobs">
                    <label for="search-jobs">Công việc</label>
                </span>

                <div class="input-group" style="margin-left: 120px;">
                    @using (Html.BeginForm("Index", "Search"))
                    {
                        <input type="text" class="searchInput form-control" placeholder="Tìm kiếm công việc" name="searchString">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                        <input type="submit" value="Search" />
                    }
                </div>
            </div>
        </div>
        <div class="siteLinks">
            <li>
                <a href="#">Browse</a>

            </li>
            <li>
                <a href="#">Browse</a>

            </li>
        </div>
        <div class="userLinks">
            @if (Session["Fullname"] != null)
            {
                <li>
                    <a href="#">Chào @Session["Fullname"].ToString()</a>
                </li>
                <li>
                    <a href="#">Đăng xuất</a>
                </li>
            }
            else
            {
                <li>
                    <a href="Home/Login">Đăng nhập</a>

                </li>
                <li>
                    <a href="#">Đăng ký</a>

                </li>
                <li><a class="regisEscape" href="#">Đăng ký tìm việc</a></li>
            }
        </div>
    </div>
</div>

<div class="banner">
    <div class="rows">
        <div class="heading">
            <span class="firstHeading">Cuộc sống hiệu quả...</span>
            <br />
            <span class="secondHeading">khi sử dụng dịch vụ người giúp việc</span>
        </div>
    </div>
    <div class="rows">
        <div class="welcom">
            <p class="textWelcom">Chào mừng tới trang web <strong>dịch vụ người giúp việc</strong>, hiện có <strong>hơn 100</strong> người giúp việc và công việc yêu cầu hằng ngày.</p>
        </div>
    </div>
    <div class="rows">
        <div class="shotcutButton">
            <a href="#" class="sb sb1 btn btn-default">Yêu cầu người giúp việc</a>
            <a href="#" class="sb sb2 btn btn-default">Làm sao để có việc</a>
        </div>
    </div>
    <div class="background">
        <img class="w1" src="../Content/Image/Home/women2.png">
        <img class="w2" src="../Content/Image/Home/women1.png">
        <!--<img class="bg" src="../Content/Image/background_blur.jpg">-->
    </div>
</div>

<div id="body">
    <div style="margin: 0 auto; width: 820px">
        <div class="row">
            <div class="col-md-3">
                <div id="bodyLeft">
                    <div class="advertising">
                    </div>
                    @using (Html.BeginForm("AdvancedSearch", "Search", FormMethod.Get, new { name = "searchForm" }))
                    {
                        <div class="shortCutLink">
                            <div class="scContentBox">
                                <div class="scTitle">
                                    Giới tính
                                </div>
                                <div class="scContent">
                                    <input type="radio" name="gender" value="Nam" onclick="search()" />Nam<br />
                                    <input type="radio" name="gender" value="Nữ" onclick="search()"/>Nữ
                                </div>
                            </div>
                        </div>
                        <div class="shortCutLink">
                            <div class="scContentBox">
                                <div class="scTitle">
                                    Tuổi
                                </div>
                                <div class="scContent">
                                    <input type="radio" name="age" value="15-20" onclick="search()"/>15-20<br />
                                    <input type="radio" name="age" value="21-30" onclick="search()"/>21-30<br />
                                    <input type="radio" name="age" value="31-40" onclick="search()"/>31-40
                                </div>
                            </div>
                        </div>
                        <div class="shortCutLink">
                            <div class="scContentBox">
                                <div class="scTitle">
                                    Lương
                                </div>
                                <div class="scContent">
                                    <input type="radio" name="salary" value="low" onclick="search()"/>Dưới 3 triệu<br />
                                    <input type="radio" name="salary" value="average" onclick="search()"/>3-5 triệu<br />
                                    <input type="radio" name="salary" value="high" onclick="search()"/>Trên 5 triệu
                                </div>
                            </div>
                        </div>
                        <div class="shortCutLink">
                            <div class="scContentBox">
                                <div class="scTitle">
                                    Loại công việc
                                </div>
                                <div class="scContent">
                                    <input type="radio" name="work" value="Biết nấu ăn" onclick="search()"/>Nấu ăn<br />
                                    <input type="radio" name="work" value="Biết giặt giũ" onclick="search()"/>Giặt giũ
                                </div>
                            </div>
                        </div>
                        <div class="shortCutLink">
                            <div class="scContentBox">
                                <div class="scTitle">
                                    Thời gian đăng bài
                                </div>
                                <div class="scContent">
                                    <input type="radio" name="time" value="1" onclick="search()"/>Cách đây 1 ngày<br />
                                    <input type="radio" name="time" value="3" onclick="search()"/>Cách đây 3 ngày<br />
                                    <input type="radio" name="time" value="7" onclick="search()"/>Cách đây 7 ngày<br />
                                    <input type="radio" name="time" value="14" onclick="search()"/>Cách đây 14 ngày<br />
                                    <input type="radio" name="time" value="30" onclick="search()"/>Cách đây 30 ngày
                                </div>
                            </div>
                        </div>
                    }
                    <div class="shortCutLink">
                        <div class="scContentBox">
                            <div class="scTitle">
                                Thông báo
                            </div>
                            <div class="scContent">
                                <span>
                                    <strong>MS - Tuyển dụng lưu ý:</strong><br />
                                    Tài khoản tuyển dụng không đăng quá 05 tin cho cùng một chuyên mục. 
                            Bạn không phải trả bất kỳ khoản phí nào hay phải mất tiền tổng đài, tin nhắn, đào tạo kỹ năng... <a href="#">Xem thêm</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div id="bodyCenter">
                    <div class="tab-content">
                        <ul class="nav nav-tabs listTitle" role="tablist" id="myTab">
                            <li class="active"><a href="#tabMaids" role="tab" data-toggle="tab">Việc tìm người thuê</a></li>
                            <li><a href="#tabCustomer" role="tab" data-toggle="tab">Công việc cần người</a></li>
                        </ul>
                        <div class="tab-pane fade in active" id="tabMaids">
                            <div class="listWork">
                                @*<div class="listHeader">
                                    <div class="listRow">
                                        <div class="listTitle">
                                            Việc tìm người thuê
                                        </div>
                                        <div class="listPage">
                                            <ul class="pagination">
                                                <li class="disabled"><a href="#">&laquo;</a></li>
                                                <li class="active"><a href="#">1</a></li>
                                                <li><a href="#">2</a></li>
                                                <li><a href="#">3</a></li>
                                                <li><a href="#">&raquo;</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>*@
                                <div class="mainContent">
                                    <ul>
                                        @foreach (var job in ViewBag.JobRequest)
                                        {
                                            <li class="childContent">
                                                <div class="function">
                                                    <div class="image">
                                                        <img src="@job.MaidImg" alt="Maid service" style="width: 100%;">
                                                    </div>
                                                    <div class="button">
                                                        <button type="button" class="btn btn-success btn-xs">Thuê <span class="glyphicon glyphicon-ok"></span></button>
                                                        <button type="button" style="display: none" class="btn btn-warning btn-xs">Bỏ thuê <span class="glyphicon glyphicon-remove"></span></button>
                                                    </div>
                                                </div>
                                                <div class="info">
                                                    <div class="row">
                                                        <div class="col-md-8">
                                                            <div class="name">
                                                                <a href="#">@job.MaidName</a>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="love">
                                                                <span class="glyphicon glyphicon-heart"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="rate">
                                                        <span class="glyphicon glyphicon-star"></span>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                    </div>
                                                    <div class="detailInfo">
                                                        <strong>Đăng lúc: </strong><span>6:00 20/08/1991</span><span> | </span><strong>Bình luận: </strong><span>3</span>
                                                    </div>

                                                    <div class="description">
                                                        @job.MaidDesc
                                                    </div>
                                                    <div class="skill">                                                       
                                                        <ul>
                                                            @foreach (var skill in job.SkillList)
                                                            {
                                                                <li class="childSkill">@skill</li>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tabCustomer">
                            <div class="listWork">
                                @*<div class="listHeader">
                                    <div class="listRow">
                                        <div class="listTitle">
                                            Công việc cần người
                                        </div>
                                        <div class="listPage">
                                            <ul class="pagination">
                                                <li class="disabled"><a href="#">&laquo;</a></li>
                                                <li class="active"><a href="#">1</a></li>
                                                <li><a href="#">2</a></li>
                                                <li><a href="#">3</a></li>
                                                <li><a href="#">&raquo;</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>*@
                                <div class="mainContent">
                                    <ul>
                                        @foreach(var recruit in ViewBag.Recruitment)
                                        {
                                            <li class="childContent">
                                                <div class="function">
                                                    <div class="image">
                                                        <img src="@recruit.CustImg" alt="Maid service" style="width: 100%;">
                                                    </div>
                                                    <div class="button">
                                                        <button type="button" class="btn btn-success btn-xs">Nhận việc <span class="glyphicon glyphicon-ok"></span></button>
                                                        <button type="button" style="display: none" class="btn btn-success btn-xs">Hủy việc <span class="glyphicon glyphicon-remove"></span></button>
                                                    </div>

                                                </div>
                                                <div class="info">
                                                    <div class="row">
                                                        <div class="col-md-8">
                                                            <div class="name">
                                                                <a href="#">@recruit.CustomerName</a>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="love">
                                                                <span class="glyphicon glyphicon-heart"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="detailInfo">
                                                        <strong>Đăng lúc: </strong><span>6:00 20/08/1991</span>
                                                    </div>
                                                    <div class="description">
                                                    </div>
                                                    <div class="skill">
                                                        <ul>
                                                            @foreach(var skill in recruit.SkillList)
                                                            {
                                                                <li class="childSkill">@skill</li>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#myTab a:selected').tab('show');
    });

    function search() {
        document.forms["searchForm"].submit();
    }
</script>
