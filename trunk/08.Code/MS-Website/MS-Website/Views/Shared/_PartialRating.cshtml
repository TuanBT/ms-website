@using (Html.BeginForm("RatingJobRequest", "Post", FormMethod.Post))
{
    <input value="0" name="rate" class="rating" id="jobrequestRate" />
    <input value="@((int)ViewBag.jrid)" name="jrId" type="hidden" id="jrIdRate"/>
    <button type="submit" class="btn btn-primary" onclick="">Chấm điểm</button>
}
<script type="text/jscript">
    function Rating() {
        var url = "/Post/RatingJobRequest";
        var rate = $('#jobrequestRate').val();
        var jrId = $('#jrIdRate').val();
        $.post(url, { rate: rate, jrId: jrId }, function (data) {
            var obj = eval('(' + data + ')');
            obj.MaidRateAvg;
            var numrate = (obj.numrate * 10) + "%";
            $(".iRating>.starRating2").css({ width: numrate });
            $(".numratePoint").html(obj.numrate);
            
        });
    }
</script>
