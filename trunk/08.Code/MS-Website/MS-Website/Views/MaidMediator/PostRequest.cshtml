                                            </div>
                                            <div class="moskSkill">
                                                <div class="moskSkill">
                                                    <div class="moskSkillName">
                                                        Ngôn ngữ
                                                    </div>
                                                    <div class="moskSkillContent">
                                                        <div class="dropdown">
                                                            <label>
                                                                @foreach (var item in ViewBag.LanguageList)
                                                                {
                                                                    <input class="language" type="checkbox" value="@item.SkillNameVietnam" name="@item.SkillName"/>
