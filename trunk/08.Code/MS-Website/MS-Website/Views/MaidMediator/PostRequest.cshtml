                                                                }
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="moskSkill">
                                                <div class="moskSkillName">
                                                    Kinh nghiệm
                                                </div>
                                                <div class="moskSkillContent">
                                                    <div class="dropdown">
                                                        <label>
                                                            <select id="exp" name="exp">
                                                                <option value="null">Không khai</option>
                                                                @foreach (var item in ViewBag.ExpList)
                                                                {
                                                                    <option value="@item.SkillString">@item.SkillString</option>
                                                                }
                                                            </select>
                                                        </label>
