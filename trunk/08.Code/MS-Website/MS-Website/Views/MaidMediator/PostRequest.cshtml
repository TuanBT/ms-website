        <div class="row">
            <div class="titlePage">Đăng yêu cầu công việc</div>
            @using (Html.BeginForm("AddRequest", "MaidMediator", FormMethod.Post))
            {
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
