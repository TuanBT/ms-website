                                                                    <option value="@item.SkillString">@item.SkillString</option>
                                                                }
                                                            </select>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="moskSkill">
                                                <div class="moskSkillName">
                                                    Kết hôn
                                                </div>
                                                <div class="moskSkillContent">
                                                    <div class="dropdown">
                                                        <label>
                                                            <select id="marriage" name="marriage">
                                                                <option value="null">Không khai</option>
                                                                @foreach (var item in ViewBag.MarriageList)
                                                                {
                                                                    <option value="@item.SkillString">@item.SkillString</option>
                                                                }
                                                            </select>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="moskCategory">
                                        <div class="moskCategoryName">
                                            Yêu cầu
                                        </div>
                                        <div class="moskCategoryContent">
                                            <div class="moskSkill">
                                                <div class="moskSkillName">
                                                    Ở lại
                                                </div>
                                                <div class="moskSkillContent">
                                                    <div class="dropdown">
                                                        <label>
                                                            <select id="stay" name="stay">
                                                                <option value="null">Không khai</option>
                                                                @foreach (var item in ViewBag.StayList)
                                                                {
                                                                    <option value="@item.SkillString">@item.SkillString</option>
                                                                }
                                                            </select>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="moskSkill">
                                                <div class="moskSkillName">
                                                    Mức lương
                                                </div>
                                                <div class="moskSkillContent">
                                                    <div class="dropdown">
                                                        <label>
                                                            <select id="salary" name="salary">
                                                                <option value="null">Không khai</option>
                                                                @foreach (var item in ViewBag.SalaryList)
                                                                {
                                                                    <option value="@item.SkillString">@item.SkillString</option>
                                                                }
                                                            </select>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="moskSkill">
                                                <div class="moskSkillName">
                                                    Thời gian 
                                                </div>
                                                <div class="moskSkillContent">
                                                    <div class="dropdown">
                                                        <label>
                                                            <select id="work" name="work">
                                                                <option value="null">Không khai</option>
                                                                @foreach (var item in ViewBag.WorkList)
                                                                {
                                                                    <option value="@item.SkillString">@item.SkillString</option>
                                                                }
                                                            </select>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="moskCategory">
                                        <div class="moskCategoryName">
                                            Kĩ năng
                                        </div>
                                        <div class="moskCategoryContent">
                                            <div class="moskSkill">
                                                <div class="moskSkillName">
                                                    Ở lại
                                                </div>
                                                <div class="moskSkillContent">
                                                    <div class="dropdown">
                                                        <label>
                                                            @foreach (var item in ViewBag.SkillList)
                                                            {
                                                                <input class="skill" type="checkbox" value="@item.SkillNameVietnam" name="@item.SkillName"/>
                                                                @item.SkillNameVietnam<br />
                                                            }
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary" data-dismiss="modal" style="margin-left: 400px; margin-bottom: 10px;" onclick="addSkill()">Đồng ý</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="postJRRow">
                    <div class="row">
                        <div class="col-md-4 poJRTtitle">
                            Thời hạn đăng
                        </div>
                        <div class="col-md-8">
                            <select id="time" class="form-control" name="time">
